= render 'user_dashboard'

%p= @user.email
%p= @user.created_at
%p= @user.admin

%table.table.table-bordered
	%thead
		%tr
			%th Section
			%th Lesson
			%th Status
		- @article.each do |article|
			%tr
				%td= article.title
				%td
				%td.progress
					.progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{@percentage}", :role => "progressbar", :style => "width:#{@percentage}%"}#{@percentage}%
						
				- @lesson.each do |lecture|
					- if lecture.article_id == article.id
						%tr
							%td
							%td= link_to lecture.title, "/articles/#{article.id}/lecture/#{lecture.id}"
							- @status.each do |status|
								- if status.lecture_id == lecture.id
									%td Completed
